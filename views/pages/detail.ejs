<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="/styles/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <header>
        <header>
            <a href="/home">home</a>
            <a href="/character/my-fav-characters">fav</a>
            <a href="/creatpage">creat</a>
        </header>
    </header>
    <main>
        <section class="charcontainer">
            <%data.forEach(data=>{%>
                <div>
                    <p>name: <%=data.name%></p>
                    <p>house: <%=data.house%></p>
                    <p>patronus: <%=data.patronus%></p>
                    <p>alive: <%=data.alive%></p>




                    <form action="/character/<%=data.id%>?_method=delete" method="post">
                        <input type="submit" value="delete">
                    </form>

                    <form action="/character/<%=data.id%>?_method=put" method="post">

                        <input type="text" name="name" value="<%=data.name%>" class="inputclass">
                        <input type="text" name="house" value="<%=data.house%>" class="inputclass">
                        <input type="text" name="patronus" value="<%=data.patronus%>" class="inputclass">
                        <input type="text" name="alive" value="<%=data.alive%>" class="inputclass">
                        <input type="submit" value="update">

                    </form>

                </div>
                <%})%>
        </section>
    </main>

</body>
</html>